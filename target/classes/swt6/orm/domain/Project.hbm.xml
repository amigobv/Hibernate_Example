<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="swt6.orm.domain">

  <class name="Project">
    <id name="id">
    	<generator class="native"></generator>
    </id>
    
    <property name="name"></property>
    
    <set name="members" table="ProjectEmployee" cascade="save-update">
    	<key column="projectId"/>
    	<many-to-many class="Employee" column="employeeId"/>
    </set>
    
    <set name="modules" inverse="true" fetch="join" lazy="false" cascade="all">
    	<key column="project_id"/>
    	<one-to-many class="Module"/>
    </set>

  </class>
</hibernate-mapping>
